{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "pluginTimeout": 5000,
  "alwaysThinkingEnabled": false,
  "permissions": {
    "allow": [
      "Bash(git add .)",
      "Bash(git commit -m *)",
      "Bash(git push *)",
      "Bash(git status)",
      "Bash(git log *)",
      "Write(*)",
      "Read(*)",
      "Edit(*)",
      "Glob(*)",
      "Grep(*)"
    ]
  }
}
